pkgname=libelectronpass
pkgver=0.1
pkgdesc="Backend library for ElectronPass desktop app."
pkgrel=1
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url='https://electronpass.github.io'
license=('GPL3')
depends=('libsodium' 'gcc-libs')
makedepends=('git')
conflicts=('libelectronpass-git')
provides=('libelectronpass')
groups=('electronpass')
source=("https://github.com/electronpass/${pkgname}/archive/v${pkgver}.tar.gz")
md5sums=('SKIP')


prepare() {
	mkdir -p build
}

build() {
	cd build
	cmake ../${pkgname}-${pkgver}
	make
}

package() {
	cd build
	make DESTDIR="${pkgdir}" install
}
