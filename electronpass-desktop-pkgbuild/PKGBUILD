pkgname=libelectronpass
pkgver=0.1
pkgdesc="ElectronPass desktop app release package."
pkgrel=1
arch=('i686' 'x86_64' 'armv6h' 'armv7h')
url="http://electronpass.github.io"
license=('GPL3')
depends=('qt5-base' 'qt5-declarative' 'qt5-quickcontrols' 'qt5-quickcontrols2' 'qt5-tools' 'libelectronpass')
makedepends=('git' 'extra-cmake-modules')
conflicts=('electronpass-desktop-git')
provides=('electronpass-desktop')
groups=('electronpass')
source=("https://github.com/electronpass/${pkgname}/archive/v${pkgver}.tar.gz")
md5sums=('SKIP')


prepare() {
	mkdir -p build
}

build() {
	cd build
	cmake ../${pkgname}-${pkgver}
	make
}

package() {
	cd build
	make DESTDIR="${pkgdir}" install
}
